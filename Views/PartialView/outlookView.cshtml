<div class="container mt-4">
    <div class="card shadow-lg p-4" style="max-width: 600px; margin: 0 auto;">

        <!-- Row 1: Icon and Header -->
        <div class="row mb-4 align-items-center">
            <div class="col-2 text-center">
                <img src="/images/app_IMGs/outlook.png" alt="Outlook Logo" style="width: 60px; height: auto;">
            </div>
            <div class="col-10">
                <h2 class="m-0">Update Mailbox Settings</h2>
            </div>
        </div>
        <hr class="text-muted">

        <!-- Row 2: Start Date and End Date -->
        <div class="row mb-4">
            <div class="col-md-6">
                <label for="startTime" class="form-label">Schedule Start Time</label>
                <input type="datetime-local"
                       id="outlookstartTime"
                       name="startTime"
                       class="form-control outlook-custom-input"
                       required>
                <div class="invalid-feedback">Please provide a start time.</div>
            </div>
            <div class="col-md-6">
                <label for="endTime" class="form-label">Schedule End Time</label>
                <input type="datetime-local"
                       id="outlookendTime"
                       name="endTime"
                       class="form-control outlook-custom-input"
                       required>
                <div class="invalid-feedback">Please provide an end time.</div>
            </div>
        </div>
        <hr class="text-muted">

        <!-- Row 3: Message Text Area -->
        <div class="row mb-4">
            <div class="col-12">
                <label for="autoReplyMessage" class="form-label">Automatic Reply Message</label>
                <textarea id="outlookautoReplyMessage"
                          name="autoReplyMessage"
                          class="form-control outlook-custom-input"
                          rows="10"
                          placeholder="Enter your message..."
                          required></textarea>
                <div class="invalid-feedback">Please enter a reply message.</div>
            </div>
        </div>
        <hr class="text-muted">

        <!-- Row 4: Submit Button -->
        <div class="row">
            <div class="col-12 text-end">
                <button type="button" id="deleteBtn" class="btn" data-job-name="Outlook" style="background-color: #249ee4; color: white;" onclick="deleteSingleJob(this)">
                    Delete
                </button>
                <button type="submit"
                        class="btn"
                        style="background-color: #249ee4; color: white;"
                        onclick="generateJSON('outlook')">
                    Update Settings
                </button>
            </div>
        </div>

    </div>
</div>