    <h3 class="mt-4">Mailbox Settings (JSON)</h3>
    @if (ViewBag.MailBoxSettings != null)
    {
        <pre class="p-3 bg-light border rounded">
            @Html.Raw(ViewBag.MailBoxSettings)
                </pre>
    }
    else
