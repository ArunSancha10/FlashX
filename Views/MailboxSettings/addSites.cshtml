@model UpdateSites

<div class="card" style="width: 100%; margin-bottom: 20px;">
    <div class="card-header">
        Edit Details
    </div>
    <div class="card-body">
        <form asp-action="addSites" method="post">
            <div class="form-group mb-3">
                <label asp-for="Title"></label>
                <input type="text" class="form-control" asp-for="Title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Duration"></label>
                <input type="text" class="form-control" asp-for="Duration" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="EndDate"></label>
                <input type="text" class="form-control" asp-for="EndDate" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Reason"></label>
                <input type="text" class="form-control" asp-for="Reason" />
                <span asp-validation-for="Reason" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Status"></label>
                <input type="text" class="form-control" asp-for="Status" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>
