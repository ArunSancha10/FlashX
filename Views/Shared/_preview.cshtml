        <!-- Right Column: Preview Section -->
<div class="col-12 col-md-6">
    <h2 class="text-center">Preview</h2>
    <div class="preview-section text-center">
        <h3 id="previewDesc" class="preview-message">Your Out of Office message will be displayed here</h3>
        <img id="previewImg" src="images/placeholder.png" alt="Preview Image" class="previewApp">
    </div>


    <h3 class="mt-4">Mailbox Settings (JSON)</h3>
    @if (ViewBag.response != null)
    {
        <pre class="p-3 bg-light border rounded">
            @Html.Raw(ViewBag.response)
                                </pre>
    }
    else
    {
        <p class="text-muted">No mailbox settings available.</p>
    }
</div>