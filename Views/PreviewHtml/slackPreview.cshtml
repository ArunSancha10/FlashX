<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        .menu-container {
            max-width: 300px;
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 16px;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-left: 5cm;
        }

        .profile-section {
            display: flex;
            align-items: center;
            margin-bottom: 16px;
        }

        .profile-pic {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background-color: #f0f0f0;
            margin-right: 12px;
        }

        .menu-item {
            cursor: pointer;
            padding: 8px 0;
            font-size: 14px;
            text-align: left;
        }

        .menu-item-divider {
            height: 1px;
            background-color: #ddd;
            margin: 8px 0;
        }

        .menu-item-action {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 8px 0;
        }

        .status-section {
            display: flex;
            align-items: center;
            margin-bottom: 12px;
        }

        .status-icon {
            margin-right: 8px;
        }

        .sign-out {
            color: red;
            text-align: left;
        }
    </style>
</head>
<body>
    <div class="menu-container">
        <!-- Profile Section -->
        <div class="profile-section">
            <div class="profile-pic">
                <img src="https://via.placeholder.com/40" alt="Profile" style="width: 100%; height: 100%; border-radius: 50%;">
            </div>
            <div>
                <h6 class="m-0" id="pname">Your Name</h6>
                <span id="profileStatus" style="color: green; font-size: 0.875rem;">
                    <i class="fa fa-circle"></i>Active
                </span>
            </div>
        </div>

        <!-- Status Section -->
        <div class="status-section">
            <span id="statusIcon" class="status-icon">🌴</span>
            <span id="statusText">On holiday</span>
        </div>

        <!-- Menu Items -->
        <div class="menu-item">Clear status</div>
        <div class="menu-item">Set yourself as <strong>away</strong></div>
        <div class="menu-item-action">
            <span>Pause notifications</span>
            <span>On</span>
        </div>

        <!-- Divider -->
        <div class="menu-item-divider"></div>

        <!-- Settings Section -->
        <div class="menu-item">Profile</div>
        <div class="menu-item">Preferences</div>
        <div class="menu-item-action">
            <span>Downloads</span>
            <span style="color: #6c757d;">Ctrl+Shift+J</span>
        </div>

        <!-- Divider -->
        <div class="menu-item-divider"></div>

        <!-- Sign Out -->
        <div class="menu-item sign-out">Sign out of Cygnussoftwares</div>
    </div>
</body>
</html>
